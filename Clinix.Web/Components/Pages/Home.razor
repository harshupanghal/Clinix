<style>
    
    .landing-page {
        min-height: 100vh;
    }

    .hero-section {
        background: linear-gradient(135deg, var(--clx-primary-light) 0%, var(--clx-white) 50%, var(--clx-primary-light) 100%);
        padding: calc(var(--clx-spacing-2xl) * 2) var(--clx-spacing-lg) var(--clx-spacing-2xl);
        position: relative;
        overflow: hidden;
    }

    .hero-container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--clx-spacing-2xl);
        align-items: center;
    }

    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: var(--clx-spacing-xs);
        background-color: var(--clx-success-light);
        color: var(--clx-success);
        padding: var(--clx-spacing-xs) var(--clx-spacing-md);
        border-radius: var(--clx-radius-full);
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: var(--clx-spacing-lg);
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 700;
        color: var(--clx-gray-900);
        margin-bottom: var(--clx-spacing-md);
        line-height: 1.2;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        color: var(--clx-primary);
        font-weight: 600;
        margin-bottom: var(--clx-spacing-lg);
    }

    .hero-description {
        font-size: 1.125rem;
        color: var(--clx-gray-700);
        line-height: 1.7;
        margin-bottom: var(--clx-spacing-xl);
    }

    .hero-actions {
        display: flex;

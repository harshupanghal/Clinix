                            }
                        </div>
                        <div class="role-text">
                            <span class="role-title">@_userRole</span>
                            <span class="role-subtitle">Access Level</span>
                        </div>
                    </div>
                    
                    <button class="sidebar-logout-btn" @onclick="Logout" data-collapsed="@_isCollapsed.ToString().ToLower()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
                        <span class="link-text">Logout</span>
                    </button>
                }
                <div class="version-text">
                    <span class="link-text">Clinix v1.0.0</span>
                </div>
            </div>
        </div>
    </aside>

    @if (_mobileSidebarOpen)
    {
        <div class="mobile-overlay" @onclick="CloseMobileSidebar"></div>
    }
</div>

@code {
    private bool _isAuthenticated;
    private string _userName = "User";
    private string _userRole = "User";
    private bool _isCollapsed = false;
    private bool _mobileSidebarOpen = false;
    private bool _userDropdownOpen = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        _isAuthenticated = user.Identity?.IsAuthenticated ?? false;
        if (_isAuthenticated)
        {
            _userName = user.FindFirst(c => c.Type == ClaimTypes.Name)?.Value ?? "User";
            _userRole = user.FindFirst(c => c.Type == ClaimTypes.Role)?.Value ?? "User";
        }
    }

    private void ToggleCollapse() => _isCollapsed = !_isCollapsed;
    private void ToggleMobileSidebar() => _mobileSidebarOpen = !_mobileSidebarOpen;
    private void CloseMobileSidebar() => _mobileSidebarOpen = false;
    private void ToggleUserDropdown() => _userDropdownOpen = !_userDropdownOpen;
    private void CloseUserDropdown() => _userDropdownOpen = false;
    
    private void Logout() 
    {
        _userDropdownOpen = false;
        Navigation.NavigateTo("logout", forceLoad: true);
    }
}

<style>
    :root {
        --sidebar-width: 260px;
        --sidebar-width-collapsed: 80px;
        --topbar-height: 64px;
        
        /* New Hospital Theme Colors */
        --c-primary: #007a99;
        --c-primary-light: #e0f7ff;
        --c-primary-dark: #005b73;
        --c-accent: #29b6f6;
        --c-danger: #e53935;
        --c-danger-light: #ffebee;

        --c-bg: #f4f7f9;
        --c-surface: #ffffff;
        --c-border: #e1e8ed;
        
        --c-text-primary: #1d2c38;
        --c-text-secondary: #5a6e7e;
        --c-text-on-dark: #ffffff;
        --c-text-on-dark-secondary: #c0eefc;

        --c-sidebar-bg: linear-gradient(180deg, #005b73 0%, #004d61 100%);
        --c-sidebar-bg-hover: rgba(255, 255, 255, 0.05);
        --c-sidebar-bg-active: rgba(255, 255, 255, 0.1);
        
        --shadow-sm: 0 2px 4px rgba(29, 44, 56, 0.05);
        --shadow-md: 0 4px 12px rgba(29, 44, 56, 0.08);
        --shadow-lg: 0 10px 30px rgba(29, 44, 56, 0.1);
        
        --radius-sm: 4px;
        --radius-md: 8px;
        --radius-lg: 12px;
        
        --transition-fast: 200ms ease;
        --transition-normal: 300ms cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .clinix-nav-container {
        position: relative;
    }

    /* ============================================
       TOPBAR STYLES
       ============================================ */
    .clinix-topbar {
        position: fixed;
        top: 0; left: var(--sidebar-width); right: 0;
        height: var(--topbar-height);
        background-color: var(--c-surface);
        /* border-bottom: 1px solid var(--c-border); */
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 24px;
        z-index: 1001;
        transition: left var(--transition-normal);
    }
    body:has(.clinix-sidebar[data-collapsed="true"]) .clinix-topbar,
.clinix-sidebar[data-collapsed="true"] ~ .clinix-topbar {
    left: var(--sidebar-width-collapsed);
}
    .clinix-topbar-left,
    .clinix-topbar-right {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    /* ============================================
       BRAND & COLLAPSE BUTTON
       ============================================ */
    .navbar-brand {
        display: flex;
        align-items: center;
        gap: 12px;
        color: var(--c-primary);
        font-weight: 600;
        font-size: 1.25rem;
        text-decoration: none;
        margin-right: 16px;
    }
    .brand-text { transition: opacity var(--transition-normal); }

    .icon-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px; height: 40px;
        background-color: transparent;
        border: none;
        border-radius: var(--radius-md);
        color: var(--c-text-secondary);
        cursor: pointer;
        transition: all var(--transition-fast);
    }
    /* .icon-btn:hover {
        background-color: var(--c-primary-light);
        color: var(--c-primary);
    } */
    .collapse-btn { display: none; }

    /* ============================================
       USER INFO DROPDOWN
       ============================================ */
    .user-info-dropdown { position: relative; }

    .user-info-chip {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 6px;
        background-color: transparent;
        border: none;
        border-radius: var(--radius-lg);
        cursor: pointer;
        transition: background-color var(--transition-fast);
    }
    .user-info-chip:hover { background-color: var(--c-bg); }

    .user-avatar {
        width: 40px; height: 40px;
        border-radius: 50%;
        background: var(--c-primary);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--c-text-on-dark);
        font-weight: 600;
        font-size: 1rem;
    }

    .user-info-text { display: none; text-align: left; }
    .user-name { font-weight: 600; color: var(--c-text-primary); line-height: 1.2; }
    .user-role { font-size: 0.8rem; color: var(--c-text-secondary); line-height: 1.2; }
    .chevron { color: var(--c-text-secondary); transition: transform var(--transition-fast); }
    .user-info-chip[aria-expanded="true"] .chevron { transform: rotate(180deg); }

    .dropdown-menu-custom {
        position: absolute;
        top: calc(100% + 8px); right: 0;
        min-width: 220px;
        background-color: var(--c-surface);
        border: 1px solid var(--c-border);
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-lg);
        padding: 8px;
        z-index: 1002;
        animation: dropdownFadeIn 150ms ease forwards;
    }
    @@keyframes dropdownFadeIn { from { opacity: 0; transform: translateY(-10px); } to { opacity: 1; transform: translateY(0); } }

    .dropdown-item-custom {
        display: flex; align-items: center; gap: 12px;
        padding: 10px 12px; font-size: 0.9rem; color: var(--c-text-secondary);
        text-decoration: none; border-radius: var(--radius-sm); cursor: pointer;
        transition: all var(--transition-fast); background: none; border: none;
        width: 100%; text-align: left;
    }
    .dropdown-item-custom:hover { background-color: var(--c-bg); color: var(--c-text-primary); }
    .dropdown-item-custom.danger { color: var(--c-danger); }
    .dropdown-item-custom.danger:hover { background-color: var(--c-danger-light); }
    .dropdown-divider-custom { height: 1px; background-color: var(--c-border); margin: 8px 0; }

    /* ============================================
       SIDEBAR STYLES
       ============================================ */
    .clinix-sidebar {
        position: fixed;
        top: 0; left: 0;
        width: var(--sidebar-width);
        height: 100vh;
        background: var(--c-sidebar-bg);
        color: var(--c-text-on-dark);
        display: flex;
        flex-direction: column;
        transition: width var(--transition-normal), transform var(--transition-normal);
        z-index: 1000;
        box-shadow: var(--shadow-md);
    }
    
    .clinix-sidebar[data-collapsed="true"] { width: var(--sidebar-width-collapsed); }
    
    .sidebar-content {
        display: flex;
        flex-direction: column;
        height: 100%;
        overflow-y: auto;
        overflow-x: hidden;
    }
    
    .sidebar-content::-webkit-scrollbar { width: 6px; }
    .sidebar-content::-webkit-scrollbar-track { background: transparent; }
    .sidebar-content::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.2); border-radius: 3px; }
    .sidebar-content::-webkit-scrollbar-thumb:hover { background: rgba(255,255,255,0.3); }

    .sidebar-nav {
        flex-grow: 1;
        padding: 16px 12px;
    }
    
    /* ============================================
       NAV LIST
       ============================================ */
    .nav-list { list-style: none; padding: 0; margin: 0; }
    .nav-item { margin-bottom: 4px; }
    
    .nav-item-header {
        padding: 16px 16px 8px;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        color: var(--c-text-on-dark-secondary);
        opacity: 0.7;
        letter-spacing: 0.5px;
        transition: opacity var(--transition-normal);
    }

    .nav-link {
        display: flex; align-items: center;
        height: 44px;
        padding: 0 16px;
        gap: 16px;
        color: var(--c-text-on-dark-secondary);
        text-decoration: none;
        border-radius: var(--radius-md);
        font-size: 0.9rem;
        font-weight: 500;
        transition: all var(--transition-fast);
        white-space: nowrap;
        position: relative;
    }
    .nav-link::before {
        content: '';
        position: absolute;
        left: 0; top: 50%;
        transform: translateY(-50%);
        height: 0;
        width: 4px;
        background: var(--c-accent);
        border-radius: 0 4px 4px 0;
        transition: height var(--transition-fast);
    }
    .nav-link:hover { background-color: var(--c-sidebar-bg-hover); color: var(--c-text-on-dark); }
    .nav-link.active { background-color: var(--c-sidebar-bg-active); color: var(--c-text-on-dark); font-weight: 600; }
    .nav-link.active::before { height: 60%; }
    .nav-link svg { flex-shrink: 0; transition: transform var(--transition-fast); }
    .nav-link:hover svg { transform: scale(1.1); }

    .link-text { 
        transition: opacity 150ms linear, transform 150ms linear;

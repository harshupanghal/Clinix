@using MudBlazor
@inherits LayoutComponentBase

<div class="page-wrapper">

    <NavMenu />

    <main class="main-content-area">
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    <div class="error-container">
        <div class="error-icon">
            <i class="bi bi-exclamation-triangle-fill"></i>
        </div>
        <div class="error-content">
            <h5 class="error-title">Oops! Something went wrong</h5>
            <p class="error-message">An unexpected error has occurred. Please try reloading the page.</p>
            <div class="error-actions">
                <a href="." class="btn btn-primary">
                    <i class="bi bi-arrow-clockwise me-2"></i>Reload Page
                </a>
                <button class="btn btn-outline-secondary" onclick="document.getElementById('blazor-error-ui').style.display='none'">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
        </div>
    </div>
</div>

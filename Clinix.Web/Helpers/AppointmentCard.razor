@* @rendermode InteractiveServer *@
@using Clinix.Domain.Entities.Appointments

<div class="card mb-2 shadow-sm">
    <div class="card-body d-flex justify-content-between align-items-center">
        <div>
            <div class="fw-bold">@Appointment.StartAt:yyyy-MM-dd HH:mm</div>
            <div class="text-muted">Duration: @((Appointment.EndAt - Appointment.StartAt).TotalMinutes) mins</div>
            <div class="small text-muted">Status: @Appointment.Status</div>
        </div>
        <div class="text-end">
            <div class="small">Doctor: @DoctorDisplay</div>
            <div class="small">Patient: @PatientDisplay</div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired] public Appointment Appointment { get; set; } = default!;
    [Parameter] public string? DoctorDisplay { get; set; }
    [Parameter] public string? PatientDisplay { get; set; }
}